@{
    Cassette.Views.Bundles.Reference("Scripts/libs");
    Cassette.Views.Bundles.Reference("Content");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Cassette.Views.Bundles.RenderStylesheets()
</head>
<body>
    @Cassette.Views.Bundles.RenderScripts()
    <div class="mainHeader">
        <div class="title left">
            <h1>
                RightRecruit | RightSide</h1>
        </div>
        <div class="right">
            @Html.ActionLink("Pricing", "Pricing", "Home", null, new { @class="link"}) | 
            @Html.ActionLink("Sign up", "Signup", "Signup", null, new { @class = "link" }) | 
            <a class="link" href="/rr/login">Login</a>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
